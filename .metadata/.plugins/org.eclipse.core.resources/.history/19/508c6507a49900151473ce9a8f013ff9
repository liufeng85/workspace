import os

class Config:
    def __init__(self):
        _path = os.getcwd()
        path=os.path.join(_path,"config.txt")
        f = open(path)
        try:
            for line in f:
                conf_name, value = line.split("=")
                if (conf_name == "casepath"):
                    self.casepath = value.strip()
                elif(conf_name == "exportpath"):
                    self.exportpath = value.strip()
                elif(conf_name == "ipaddress"):
                    self.ipaddress = value.strip()
                elif(conf_name == "logpath"):
                    self.logpath = value.strip()
                elif(conf_name == "db_conf"):
                    self.db_conf= eval(value.strip())
                else:
                    continue
        except Exception as e:
            print(e)
        
    def get_case_path(self):
        return self.casepath 
    
    def get_export_path(self):
        return self.exportpath
    
    def get_ip_address(self):
        return self.ipaddress
    
    def get_log_path(self):
        return self.logpath
    
    def get_DB_conf(self):
        return self.db_conf
    
    def print_path(self):
        print(os.getcwdb())
    
    
        